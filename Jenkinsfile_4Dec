pipeline
  {
  agent any
  
  stages
     {
	  
	    stage("Build Java Code")
		   {
		   
		       steps{
		       sh 'mvn clean install'
			        }
		   }
		   
		stage("test The code")
		    {
		      steps{
                   sh 'mvn test'			  
			  }
			}  
	
		stage("Build Docker Image")
		      {
			  
			  steps{
			  
			  docker build -t myjob_$BUILD_NUMBER
			       }
			  
			  }
		
	 
	 }
  
     
  
  }
